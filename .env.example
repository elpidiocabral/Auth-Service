# Database Configuration
# For SQLite (local testing - no Docker needed):
DATABASE_URL=sqlite:///./test.db
# For PostgreSQL (production with Docker):
# DATABASE_URL=postgresql://auth_user:auth_password@db:5432/auth_db

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
# Get these credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Facebook OAuth Configuration
# Get these credentials from: https://developers.facebook.com/apps/
# Follow the setup guide in FACEBOOK_OAUTH_SETUP.md
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URI=http://localhost:8000/auth/facebook/callback

# Discord OAuth Configuration
# Get these credentials from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
RESET_PASSWORD_EXPIRES_MINUTES=15
